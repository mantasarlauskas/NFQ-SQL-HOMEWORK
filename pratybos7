1. 
CREATE TABLE `Authors_Books` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `authorId` int(11) DEFAULT NULL,
  `bookId` int(11) DEFAULT NULL,
  PRIMARY KEY (`id`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8 AUTO_INCREMENT=9;

ALTER TABLE `Books`
DROP COLUMN `authorId`;

DELETE FROM `Books`;
DELETE FROM `Authors`;

